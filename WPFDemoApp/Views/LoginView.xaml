<Window x:Class="WPFDemoApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WPFDemoApp.ViewModels"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">

    <!-- ✅ DataContext set -->
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">

            <!-- ❌ PlaceholderText removed -->
            <TextBox Height="30" Margin="0,0,0,10"
                     Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter Username"/>

            <PasswordBox x:Name="pwd" Height="30" Margin="0,0,0,10"/>

            <Button Content="Login" Height="30"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=pwd, Path=Password}" />
        </StackPanel>
    </Grid>
</Window>
