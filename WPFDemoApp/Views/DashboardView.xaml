<Window x:Class="WPFDemoApp.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="500" Width="900"
        Background="#f5f5f5"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20"
                BorderBrush="#cccccc" BorderThickness="1">
            <StackPanel>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold"
                               Foreground="#2c3e50" VerticalAlignment="Center"/>
                    <Button Content="Logout" Width="100" Height="35"
                            Background="#e74c3c" Foreground="White" FontWeight="Bold"
                            BorderBrush="#c0392b" BorderThickness="1"
                            Cursor="Hand"
                            Click="BtnLogout_Click"/>
                </StackPanel>

                <!-- Employee Management Button -->
                <Button Content="Employee Management"
                        Width="200" Height="40"
                        Background="#3498db" Foreground="White" FontWeight="Bold"
                        BorderBrush="#2980b9" BorderThickness="1"
                        Cursor="Hand"
                        Click="Employee_Click"
                        Margin="0,0,0,20"/>

                <!-- Employee DataGrid -->
                <DataGrid x:Name="dgEmployees" AutoGenerateColumns="True" Height="300"
                          GridLinesVisibility="Horizontal" RowBackground="#ecf0f1"
                          AlternatingRowBackground="White" BorderBrush="#bdc3c7"
                          FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
