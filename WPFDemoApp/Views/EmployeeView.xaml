<Window x:Class="WPFDemoApp.Views.EmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Management" Height="500" Width="850"
        Background="#f5f5f5" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Watermark Style -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       FontStyle="Italic"
                                       Margin="5,0,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       x:Name="watermark"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" 
                BorderBrush="#cccccc" BorderThickness="1" >
            <StackPanel>

                <!-- Heading -->
                <TextBlock Text="Employee Management" FontSize="22" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,20" 
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBox x:Name="txtName" Height="35" Margin="0,0,0,10" 
                             Tag="Enter Name"
                             FontWeight="SemiBold" FontSize="14"
                             Padding="5"
                             BorderBrush="#2980b9" BorderThickness="1" />

                    <TextBox x:Name="txtEmail" Height="35" Margin="0,0,0,10" 
                             Tag="Enter Email"
                             FontWeight="SemiBold" FontSize="14"
                             Padding="5"
                             BorderBrush="#27ae60" BorderThickness="1" />

                    <TextBox x:Name="txtDepartment" Height="35" Margin="0,0,0,10" 
                             Tag="Enter Department"
                             FontWeight="SemiBold" FontSize="14"
                             Padding="5"
                             BorderBrush="#8e44ad" BorderThickness="1" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Save" Width="100" Height="35" Margin="0,0,10,0"
                            Background="#3498db" Foreground="White" FontWeight="Bold"
                            BorderBrush="#2980b9" BorderThickness="1"
                            Cursor="Hand" Click="BtnSave_Click" />

                    <Button Content="Delete" Width="100" Height="35"
                            Background="#e74c3c" Foreground="White" FontWeight="Bold"
                            BorderBrush="#c0392b" BorderThickness="1"
                            Cursor="Hand" Click="BtnDelete_Click" />
                </StackPanel>

                <!-- Search -->
                <TextBox x:Name="txtSearch" Height="35" Margin="0,0,0,10"
                         Tag="Search by Name, Email or Department"
                         Padding="5" FontWeight="SemiBold" FontSize="14"
                         BorderBrush="#f39c12" BorderThickness="1"
                         TextChanged="TxtSearch_TextChanged"/>

                <!-- DataGrid -->
                <DataGrid x:Name="dgEmployees" AutoGenerateColumns="True" Height="250" 
                          GridLinesVisibility="Horizontal" RowBackground="#ecf0f1" 
                          AlternatingRowBackground="White" BorderBrush="#bdc3c7" 
                          FontWeight="SemiBold" FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
