<Window x:Class="WPFDemoApp.Views.EmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmployeeView" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>

            <TextBox x:Name="txtName" Margin="0,0,0,5" />
            <TextBox x:Name="txtEmail" Margin="0,0,0,5" />
            <TextBox x:Name="txtDepartment" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Width="80" Margin="0,0,5,0" Click="BtnSave_Click"/>
                <Button Content="Delete" Width="80" Click="BtnDelete_Click"/>
            </StackPanel>

            <TextBox x:Name="txtSearch" Margin="0,10,0,5"  TextChanged="TxtSearch_TextChanged"/>

            <DataGrid x:Name="dgEmployees" AutoGenerateColumns="True" Height="250"/>
        </StackPanel>
    </Grid>
</Window>
